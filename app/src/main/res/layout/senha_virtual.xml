<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".senha_virtual">

    <!-- CardView centralizado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/senha_virtual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_margin="24dp"
        android:background="@color/white">

        <!-- Layout interno para os botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="252dp"
                app:srcCompat="@drawable/senha" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="Aqui você consegue ter acesso a sua senha"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="A SUA SENHA É: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="71dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:background="#1C166C"
                    android:paddingTop="10dp"
                    android:text="28"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Últimas senhas solucionadas"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="110dp"
                    android:layout_height="77dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#1C166C"
                    android:paddingTop="15dp"
                    android:text="27"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="110dp"
                    android:layout_height="77dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#1C166C"
                    android:paddingTop="15dp"
                    android:text="26"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="110dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:background="#1C166C"
                    android:paddingTop="15dp"
                    android:text="25"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/button5"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#1C166C"
                android:onClick="votlaMenu"
                android:text="Voltar" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
