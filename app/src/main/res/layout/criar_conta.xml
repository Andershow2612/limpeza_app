<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">

    <!-- CardView centralizado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/criar_conta_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_margin="24dp"
        android:background="@color/white">

        <!-- Layout interno para os botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botão 1 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:text="Crie uma conta"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/criar_conta" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Digite seu email" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#DCDCDC"
                android:hint="Email" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Crie sua senha" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#DCDCDC"
                android:hint="Senha" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Endereço:" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#DCDCDC"
                android:hint="Endereço" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Bairro:" />

            <EditText
                android:id="@+id/neighborhood"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#DCDCDC"
                android:hint="Bairro" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Cidade:" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#DCDCDC"
                android:hint="Cidade" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="Estado:" />

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#DCDCDC"
                android:hint="Estado" />

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="195dp"
                android:layout_height="51dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1C166C"
                android:onClick="onCreateAccountClick"
                android:text="Criar conta" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
