<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Solicitacao_limpeza">

    <!-- CardView centralizado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/solicitacao_limpeza"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_margin="24dp"
        android:background="@color/white">

        <!-- Layout interno para os botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="Solicitação de limpeza"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="Insira as informações necessárias do terreno"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Digite o endereço do terreno"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#DCDCDC"
                android:hint="Endereço" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:paddingTop="19dp"
                android:text="Cidade                                                  Bairro"
                android:textAlignment="viewStart" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textView22"
                    android:layout_width="32dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:background="#DCDCDC"
                    android:hint="Cidade" />

                <EditText
                    android:id="@+id/textView23"
                    android:layout_width="32dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:background="#DCDCDC"
                    android:hint="Bairro" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Digite um ponto de referência" />

            <EditText
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="#DCDCDC"
                android:hint="Ponto de referência" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Escreva a descrição do terreno" />

            <EditText
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="#DCDCDC"
                android:hint="Descrição" />

            <Button
                android:id="@+id/button4"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#1C166C"
                android:onClick="sucesso"
                android:text="Enviar" />

            <Button
                android:id="@+id/button8"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#1C166C"
                android:onClick="votlaMenu"
                android:text="Voltar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
